      <xacro:chilitag_9_set name_start="${name_start + 18}" offset_x="${offset_set_3_x}" offset_y="${offset_set_3_y}" offset_z="${offset_set_z}" offset_tag="${offset_tag}" size="${size}" parent="${parent}">
